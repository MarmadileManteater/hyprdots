        "height": 65,
        "modules-left": [
            "image",
            "custom/playerctl",
            "custom/cava"
        ],
        "modules-center": [
            "hyprland/workspaces"
        ],
        "modules-right": [
            "tray#custom",
            "pulseaudio#custom",
            "network#custom",
            "memory#custom",
            "battery#custom"
        ],
        "reload_style_on_change": true
    },

