[
    {
        "output": ["DP-1", "DP-2", "DP-3"],
        "id": "top",
        "mode": "dock",
        "include": [
            "$HOME/.config/waybar/modules/stats.jsonc",
            "$HOME/.config/waybar/modules/clock.jsonc",
            "$HOME/.config/waybar/modules/taskbar.jsonc",
            "$HOME/.config/waybar/modules/wlogout/modules.jsonc"
        ],
        "layer": "bottom",
        "position": "top",
        "height": 55,
        "modules-left": [
            "wlr/taskbar#custom",
            "hyprland/window"
        ],
        "modules-center": [
            "clock#date",
            "clock#time"
        ],
        "modules-right": [
            "idle_inhibitor",
            "cpu#custom",
            "custom/cpu-temp",
            "custom/nvidia",
            "custom/power"
        ],
        "reload_style_on_change": true
    },

    {
        "output": ["DP-1", "DP-2", "DP-3"],
